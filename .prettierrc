{
    "trailingComma": "all",
    "tabWidth": 4,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": false,
    "arrowParens": "always",
    "printWidth": 80,
    "bracketSpacing": true,
    "plugins": ["prettier-plugin-organize-imports"],
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "printWidth": 360
        }
      },
      {
        "files": ["*.css", "*.scss"],
        "options": {
          "singleQuote": false
        }
      }
    ]
  }